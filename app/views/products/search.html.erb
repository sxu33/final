<div class="container mx-auto my-8">
  <h1 class="text-2xl font-bold mb-6">Search Results</h1>
  <p>Your search for "<%= params[:query] %>" found <%= @products.total_count %> products.</p>

  <% if @products.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @products.each do |product| %>
        <div class="bg-white shadow-md rounded-lg p-4">
          <% if product.image.attached? %>
            <%= image_tag product.image, class: "w-full h-48 object-cover rounded mb-4" %>
          <% else %>
            <div class="w-full h-48 bg-gray-200 rounded mb-4"></div>
          <% end %>
          <div class="border p-4 rounded">
            <p class="border px-4 py-2"><strong>ID:</strong> <%= product.id %></p>
            <p class="border px-4 py-2"><strong>Name:</strong> <%= link_to product.name, product_path(product), class: "text-blue-500 hover:underline" %></p>
            <p class="border px-4 py-2"><strong>Price:</strong> <%= product.price %></p>
            <p class="border px-4 py-2"><strong>Category:</strong> <%= product.category.name %></p>
            <%= button_to 'Add to Cart', add_item_cart_path(product_id: product.id), method: :post, class: "mt-2 bg-blue-500 text-white p-2 rounded w-full text-center" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mt-6">
      <%= paginate @products %>
    </div>
  <% else %>
    <p>No results found.</p>
  <% end %>
</div>
