<div class="container mx-auto mt-8">
  <h1 class="text-xl font-bold mb-4">Edit Address</h1>

  <%= form_for(@address) do |f| %>
    <div class="mb-4">
      <%= f.label :street, class: "block text-gray-700" %>
      <%= f.text_field :street, class: "mt-1 block w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :city, class: "block text-gray-700" %>
      <%= f.text_field :city, class: "mt-1 block w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :province_id, "Province", class: "block text-gray-700" %>
      <%= f.collection_select :province_id, Province.all, :id, :name, {}, class: "mt-1 block w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :postal_code, class: "block text-gray-700" %>
      <%= f.text_field :postal_code, class: "mt-1 block w-full p-2 border rounded" %>
    </div>

    <div class="actions">
      <%= f.submit "Update Address", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
  <div class="mt-4">
   <%= button_to 'Delete', address_path(@address), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "text-red-500 hover:underline" %>

  </div>
</div>


  <div class="mt-4">
    <%= link_to 'Back', user_account_path, class: "text-blue-500 hover:underline inline-block" %>
  </div>

  