<h1>Edit Address</h1>

<%= form_for(@address) do |f| %>
  <div class="field">
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :province_id %>
    <%= f.collection_select :province_id, Province.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="actions">
    <%= f.submit "Update Address" %>
  </div>
<% end %>
